---
import "@fontsource-variable/onest";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";

import '@/styles/global.css'

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>

  <body class="relative min-h-screen bg-amber-950 text-amber-100">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full inset-0 bg-[radial-gradient(#3a2618_1px,transparent_1px)] opacity-20 [background-size:20px_20px]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
    <style is:global>


      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: #fef3c6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }



      #header-nav {
        animation: linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }


    </style>
  </body>
</html>
